# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
# Add all domains that should be allowed to use your API (comma-separated)
CORS_ORIGINS=https://chatai.coastalweb.us,https://www.chatai.coastalweb.us,https://yourdomain.com

# Rate Limiting
# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW=60000
# Maximum number of requests per IP within the time window
RATE_LIMIT_MAX_REQUESTS=50

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Custom branding
SERVICE_NAME=ChatAI CoastalWeb
SUPPORT_EMAIL=support@coastalweb.us
